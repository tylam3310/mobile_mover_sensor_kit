<?xml version="1.0"?>
<package format="3">
  <name>pandar_pointcloud</name>
  <version>0.0.0</version>
  <description>
    Point cloud converter for Hesai LiDARSs.
  </description>
  <maintainer email="shinnosuke.hirakawa@tier4.jp">hirakawa</maintainer>
  <license>Apache 2</license>

  <buildtool_depend>ament_cmake_auto</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>pcl_conversions</depend>
  <depend>pcl_msgs</depend>
  <depend>perception_pcl</depend>
  <depend>libpcl-all-dev</depend>
  <depend>sensor_msgs</depend>
  <depend>pandar_msgs</depend>
  <depend>pandar_driver</depend>
  <depend>pandar_api</depend>
  
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
